<div class="container mx-auto">
    <div class="flex flex-wrap my-5">
        <h3 class="text-center">{{ page.title }}</h3>
    </div>
    <div class="divide-y divide-gray-200">
        
        <div class="p-4">
            <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold">Accordion Item 1</h2>
            <button class="text-blue-500">Toggle</button>
            </div>
            <div class="mt-2">Content for Accordion Item 1</div>
        </div>

        <div class="p-4">
            <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold">Accordion Item 2</h2>
            <button class="text-blue-500">Toggle</button>
            </div>
            <div class="mt-2">Content for Accordion Item 2</div>
        </div>


    </div>
</div>











{% schema %}
    {
        "name": "FAQ",
        "blocks": [
            {
                "name": "FAQ Items",
                "type": "faq",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "FAQ Title Example"
                    },
                    {
                        "type": "richtext",
                        "id": "answer",
                        "label": "Answer"
                    }
                ]
            }
        ]
    }
{% endschema %}